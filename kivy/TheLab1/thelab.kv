#:kivy 2.1.0

ScrollViewExample:

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:
    ScrollViewExample:

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint:1,None
        height: self.minimum_height


<StackLayoutExample>:
#    #left-right = lr, right-left = rl, top-bottom = tb, bottom-top = bt
#    orientation:"lr-tb"
#
#    #left - - -
#    padding: ('20dp', '20dp', '20dp', '20dp')
