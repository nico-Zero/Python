#:kivy 2.1.0

WidgetsExample:



<ImageExample@GridLayout>:
    cols:3
    Image:
        source:"mini_devil.png"
    Image:
        source:"mini_devil.png"
        allow_stretch:True
    Image:
        source:"mini_devil.png"
        allow_stretch:True
        keep_ratio: False
        
        
<WidgetsExample>:
    cols:3
    ToggleButton:
        id : my_toggle
        text: "OFF"
        on_state: root.change_state(self)
        size_hint: None,1
        width: "100dp"
    Button:
        text:"Click Here"
        on_press: root.on_button_click()
        disabled: (False if my_toggle.state == "down" else True)
    Label:
        text: root.display
        font_name: 'fonts/Lcd.ttf'
        font_size: "100dp"
        color: 1 , .5 , 1 , 1
    Switch:
        id: my_switch
        size_hint: None,1
        width: "100dp"
        on_active: root.change_way(self)
    Slider:
        id:my_slider
        min:0
        max:100
        value:50
        disabled: not my_switch.active
    BoxLayout:
        orientation:'vertical'
        Label:
            text: str(round(my_slider.value))
            font_name: 'fonts/Lcd.ttf'
            font_size: "100dp"
            color: 1 , .5 , 1 , 1
        ProgressBar:
            max:100
            value:my_slider.value
    TextInput:
        id:my_text_input
        size_hint: None,1
        width: "100dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text:root.text_input